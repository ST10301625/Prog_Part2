@model Prog2bPOEPart2.Models.Claim

@{
    ViewData["Title"] = "Edit Claim";
}

<h1 class="text-center mb-4">Edit Claim</h1>

<h4 class="text-muted">Update Claim Details</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="ClaimId" />

            <div class="form-group mb-4">
                <label asp-for="UserID" class="form-label"></label>
                <input asp-for="UserID" class="form-control shadow-sm" placeholder="Enter user ID" />
                <span asp-validation-for="UserID" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control shadow-sm" placeholder="Enter name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="DateSubmitted" class="form-label"></label>
                <input asp-for="DateSubmitted" class="form-control shadow-sm" placeholder="Enter submission date" />
                <span asp-validation-for="DateSubmitted" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="HoursWorked" class="form-label"></label>
                <input asp-for="HoursWorked" class="form-control shadow-sm" placeholder="Enter hours worked" />
                <span asp-validation-for="HoursWorked" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="HourlyRate" class="form-label"></label>
                <input asp-for="HourlyRate" class="form-control shadow-sm" placeholder="Enter hourly rate" />
                <span asp-validation-for="HourlyRate" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="ExtraNotes" class="form-label"></label>
                <textarea asp-for="ExtraNotes" class="form-control shadow-sm" rows="3" placeholder="Enter extra notes (optional)"></textarea>
                <span asp-validation-for="ExtraNotes" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Status" class="form-label"></label>
                <input asp-for="Status" class="form-control shadow-sm" placeholder="Enter status" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Save" class="btn btn-success btn-lg px-5" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-link">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
