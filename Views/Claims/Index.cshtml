@model IEnumerable<Prog2bPOEPart2.Models.Claim>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@* <p>
    <a asp-action="Create">Create New</a>
</p> *@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateSubmitted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoursWorked)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HourlyRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExtraNotes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateSubmitted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoursWorked)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HourlyRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExtraNotes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <div class="d-flex justify-content-around">
                    <a asp-action="Details" asp-route-id="@item.ClaimId">Details</a> 
                    <a asp-action="Delete" asp-route-id="@item.ClaimId">Delete</a>

                        @if (User.IsInRole("Lecturer"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.ClaimId">Edit</a>
                        }
                        @if (item.Status == "Pending" && (User.IsInRole("Programme Coordinator") || User.IsInRole("Academic Manager")))
                        {
                            <a asp-action="Approve" asp-route-id="@item.ClaimId" class="btn btn-success">Approve</a>
                            <a asp-action="Reject" asp-route-id="@item.ClaimId" class="btn btn-secondary">Reject</a>
                        }
                    </div>
            </td>
        </tr>
}
    </tbody>
</table>
