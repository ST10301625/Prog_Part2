@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="vh-100">
    <div class="container h-100 d-flex justify-content-center align-items-center">
        <div class="col-md-6 col-lg-5" style="margin-top: -50px;">
            <!-- Align to center like login page -->
            <div class="card shadow-lg p-5">
                <!-- Card container with padding and shadow -->
                <h2 class="fw-bold mb-4 text-center">Create a new account</h2>

                <!-- Registration Form -->
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" placeholder="Enter your email" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <!-- Position input -->
                    <div class="form-outline mb-4">
                        <label asp-for="Input.Position" class="form-label">Position</label>
                        <input asp-for="Input.Position" class="form-control form-control-lg" placeholder="Enter your position" />
                        <span asp-validation-for="Input.Position" class="text-danger"></span>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <input asp-for="Input.Password" class="form-control form-control-lg" autocomplete="new-password" placeholder="Enter your password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <!-- Confirm Password input -->
                    <div class="form-outline mb-4">
                        <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                        <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg" autocomplete="new-password" placeholder="Confirm your password" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <!-- Submit button -->
                    <div class="d-grid">
                        <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg w-100">
                            Register
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>


</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
